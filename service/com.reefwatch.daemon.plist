<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.reefwatch.daemon</string>

    <!-- Use the 'reefwatch' console_script entry point (pip install -e .).
         If installed in a virtualenv, update the path below, e.g.:
         /Users/YOU/.venv/bin/reefwatch -->
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/reefwatch</string>
        <string>--config</string>
        <string>~/.openclaw/workspace/skills/reefwatch/reefwatch_config.yaml</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>

    <key>StandardOutPath</key>
    <string>~/Library/Logs/reefwatch.stdout.log</string>

    <key>StandardErrorPath</key>
    <string>~/Library/Logs/reefwatch.stderr.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PYTHONUNBUFFERED</key>
        <string>1</string>
    </dict>
</dict>
</plist>
